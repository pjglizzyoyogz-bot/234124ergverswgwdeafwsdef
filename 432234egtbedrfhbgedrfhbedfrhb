    toggleStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    toggleStroke.Color = Color3.fromRGB(90, 40, 50)
    toggleStroke.Transparency = 0.25

    local togglePadding = Instance.new("UIPadding", toggleBarContainer)
